import React from 'react';
import styles from './Input.module.css';
export const Input=({label,tag,type,model,isRequired,errorMsg,fnChange,options,values})=>{
  const fnPrepareInputControls=()=>{
    switch (type) {
      case 'text':
      case 'password':
        return <input type={type} name={model} className="form-control" onChange={fnChange} />
      case 'radio':
        return <>
            {
              options.map((opt,ind)=>{
                return <><input value={values[ind]} type={type} name={model} className="form-control me-2" onChange={fnChange} /><span className="me-4">{opt}</span></>
              })
            }
        </>
      case 'checkbox':
        return <>
        {
          options.map((opt,ind)=>{
            return <><input value={values[ind]} type={type} name={model} className="form-control me-2" onChange={fnChange} /><span className="me-4">{opt}</span></>
          })
        }
        </>

    }
  }
  return <div className="row mb-3">
      <div className="col-sm-5 text-end">
        <b>{label}:</b>
      </div>
      <div className="col-sm-3">
       {fnPrepareInputControls()}
      </div>
      <div className="col-sm-4">
       <b className="text-danger">{errorMsg}</b>
      </div>
  </div>
}
